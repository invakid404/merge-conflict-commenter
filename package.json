{
  "name": "merge-conflict-commenter",
  "version": "0.0.0",
  "private": true,
  "description": "Automatically post a comment on PRs that have merge conflicts",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "codegen": "graphql-codegen --config codegen.yml",
    "format": "prettier --write \"**/*.ts\"",
    "format-check": "prettier --check \"**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "package": "ncc build --source-map --license licenses.txt",
    "all": "npm run codegen && npm run build && npm run format && npm run lint && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/invakid404/merge-conflict-commenter.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "invakid404 <invakid404@riseup.net>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.5.0",
    "@actions/github": "^5.0.0",
    "@octokit/graphql": "^4.7.0",
    "graphql": "^15.5.1",
    "json-to-graphql-query": "^2.1.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.1.1",
    "@graphql-codegen/typescript": "2.2.0",
    "@graphql-codegen/typescript-document-nodes": "2.1.2",
    "@graphql-codegen/typescript-resolvers": "2.1.2",
    "@octokit/graphql-schema": "^10.67.0",
    "@types/lodash": "^4.14.172",
    "@types/node": "^16.7.6",
    "@typescript-eslint/parser": "^4.30.0",
    "@vercel/ncc": "^0.30.0",
    "eslint": "^7.32.0",
    "eslint-plugin-github": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "js-yaml": "^4.1.0",
    "prettier": "2.3.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  }
}
